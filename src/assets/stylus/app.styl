$keyframe-name = pulse
@keyframes {$keyframe-name}
  for i in 0..5
    {10% * i}
      opacity (i*2/10)
  for i in 1..5
    {10% * (i+5)}
      opacity (1-(i*2)/10)

.pulse
  animation: pulse 2s infinite;


